<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SendData.SendFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_last_status"
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:gravity="bottom|center"
            android:text="Ãšltimo estado: 0"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">


            <!-- Foco Rojo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text=""
                android:contentDescription="Foco Rojo"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/holo_red_light"
                android:elevation="8dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <!-- Foco Amarillo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text=""
                android:contentDescription="Foco Amarillo"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/holo_orange_light"
                android:elevation="8dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <!-- Foco Verde -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text=""
                android:contentDescription="Foco Verde"
                app:cornerRadius="50dp"
                app:backgroundTint="@android:color/holo_green_light"
                android:elevation="8dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Apagar"
            app:cornerRadius="16dp"
            app:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fotoproyecto" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>